<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.QuestionActivity">

    <data>

    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorScreenBackground">

        <LinearLayout
            android:id="@+id/question_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--<TextView-->
                <!--android:id="@+id/question_no"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:textColor="@color/md_white_1000"-->
                <!--android:text="2"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" />-->


                <com.app.progresviews.ProgressWheel
                    android:id="@+id/time_progress"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    app:barWidth="16dp"
                    app:countText="60"
                    app:countTextColor="@color/md_white_1000"
                    app:countTextSize="32sp"
                    app:defTextSize="16sp"
                    app:marginBtwText="20dp"
                    app:percentage="360"
                    app:progressColor="@color/accent" />


                <android.support.v7.widget.CardView
                    android:id="@+id/next_question"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_alignBottom="@+id/time_progress"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    app:cardBackgroundColor="@color/next_question_disabled"
                    app:cardCornerRadius="16dp"
                    app:cardUseCompatPadding="true">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/fui_transparent"
                        android:clickable="false"
                        android:src="@drawable/ic_forward_black_24dp" />

                </android.support.v7.widget.CardView>
            </RelativeLayout>

            <TextView
                android:id="@+id/user_on_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/md_white_1000" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="Who was the first person on the moon?"
                        android:textColor="@color/md_white_1000"
                        android:textSize="18sp" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/answers"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>

        <include
            android:id="@+id/wait_dialog_layout"
            layout="@layout/wait_layout" />

        <android.support.v7.widget.CardView
            android:id="@+id/no_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="64dp"
            app:cardElevation="16dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:src="@drawable/no_result" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="No Question Found!"
                    android:textColor="@color/colorAccent"
                    android:textSize="28sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="choose another Question Criteria"
                    android:textColor="@color/md_white_1000"
                    android:textSize="16sp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </FrameLayout>

</layout>